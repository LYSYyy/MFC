#!/bin/bash

version="1.1"

	clear
	
	echo "EN"
	echo -e "  __  __   ______    _____ "
	echo -e " |  \/  | |  ____|  / ____|"
	echo -e " | \  / | | |__    | |     "
	echo -e " | |\/| | |  __|   | |     "
	echo -e " | |  | | | |      | |____ "
	echo -e " |_|  |_| |_|       \_____|"
	echo -e "                           "
	echo -e "              \e[90mby LYSYyy $version\e[0m"
	echo
	echo -e " \e[1;33;24m+Metasploit Fast Connect+\e[0m"
	
		echo
		echo -e " \e[1;32;24m[+]\e[1;39m Starting installation...\e[21;90;24m"
		echo
		
		apt-get update
		apt-get install nano
		mkdir ~/.mfconnect
		clear
		
		echo
		echo -e "\e[1;32;24mInsallation has been completed!\e[0m"
		echo
		
		sleep 1
		
		source mfc
